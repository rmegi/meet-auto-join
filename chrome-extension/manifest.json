{
  "manifest_version": 3,
  "name": "Google Meet Remote Joiner",
  "version": "1.0.2",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["http://127.0.0.1:5005/*", "https://meet.google.com/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Join from server",
    "default_popup": "popup.html"
  }
}
